{
  "name": "@sports-manager/contracts",
  "version": "0.0.3",
  "description": "SportsManager solidity contracts & artifacts",
  "author": "SportsManagers",
  "homepage": "https://www.sportsmanager.wtf/",
  "license": "GPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "clean:sol": "rimraf abi/contracts",
    "copy:sol": "cp -r artifacts/contracts abi/contracts",
    "build": "yarn build:sol --force && yarn build:ts && yarn build:declarations",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "yarn clean:sol && npx hardhat --config hardhat.config.build.ts compile && yarn copy:sol",
    "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
    "hardhat": "npx hardhat",
    "task:accounts": "npx hardhat accounts",
    "task:deploy": "npx hardhat deploy",
    "task:deploy:stream": "npx hardhat deploy-stream",
    "task:deploy-and-configure": "npx hardhat deploy-and-configure",
    "task:mint-noun": "npx hardhat mint-noun",
    "task:populate-descriptor": "npx hardhat populate-descriptor",
    "task:run-local": "npx hardhat run-local",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@float-capital/solidity-coverage": "^0.7.17",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/express": "^4.17.11",
    "@types/prompt": "^1.1.0",
    "base64-sol": "^1.0.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.9.6",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier-plugin-solidity": "^1.0.0-beta.12",
    "prompt": "^1.1.0",
    "shx": "^0.3.3",
    "ts-node": "^10.0.0",
    "typechain": "^8.0.0"
  },
  "resolutions": {
    "@solidity-parser/parser": "^0.14.0"
  },
  "dependencies": {
    "ethers": "^5.6.8"
  }
}
